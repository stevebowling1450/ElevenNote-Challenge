<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/title"
        android:id="@+id/note_title"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_alignBaseline="@+id/completeCheckBox"
        android:layout_alignBottom="@+id/completeCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAllCaps="true"/>

    <TextView
        android:text="Due Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dueView"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_below="@+id/completeCheckBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Due Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:ellipsize="end"
        android:id="@+id/timeDue"
        android:layout_below="@+id/dueView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text"
        android:id="@+id/note_text"
        android:ellipsize="end"
        android:layout_below="@+id/timeDue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catView"
        android:textStyle="bold"
        android:ellipsize="end"
        android:textSize="24dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#7C88AD"
        />

    <CheckBox
        android:text="Complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completeCheckBox"
        android:focusable="false"
        android:layout_below="@+id/catView"
        android:layout_toLeftOf="@+id/note_date"
        android:layout_toStartOf="@+id/note_date"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/date"
        android:id="@+id/note_date"
        android:layout_alignBaseline="@+id/completeCheckBox"
        android:layout_alignBottom="@+id/completeCheckBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>